{
  "$id": "https://github.com/meetnearme/api/architecture/NotificationSetting.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ISOString": {
      "type": "string",
      "format": "date-time"
    },
    "UUID": {
      "type": "string",
      "format": "uuid"
    },
    "NotificationMode": {
      "type": "string",
      "enum": ["email", "sms", "push"]
    }
  },
  "type": "object",
  "properties": {
    "id": {
      "$ref": "#/definitions/UUID"
    },
    "newFollowers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/NotificationMode"
      },
      "default": ["email", "push"]
    },
    "eventActions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/NotificationMode"
      },
      "default": ["email", "push"]
    },
    "groupActions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/NotificationMode"
      },
      "default": ["email", "push"]
    },
    "accountActions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/NotificationMode"
      },
      "default": ["email", "push"]
    },
    "ingestionActions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/NotificationMode"
      },
      "default": ["email", "push"]
    },
    "createdAt": {
      "$ref": "#/definitions/ISOString"
    }
  },
  "required": ["id", "newFollowers", "createdAt"]
}
