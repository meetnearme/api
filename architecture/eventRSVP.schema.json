{
  "$id": "https://github.com/meetnearme/api/architecture/EventRSVP.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ISOString": {
      "type": "string",
      "format": "date-time"
    },
    "UUID": {
      "type": "string",
      "format": "uuid"
    },
    "RSVPStatus": {
      "type": "string",
      "enum": ["yes", "no", "maybe"]
    }
  },
  "type": "object",
  "properties": {
    "id": {
      "$ref": "#/definitions/UUID"
    },
    "userId": {
      "type": "string",
      "$ref": "https://github.com/meetnearme/api/architecture/User.json"
    },
    "eventId": {
      "type": "string",
      "$ref": "https://github.com/meetnearme/api/architecture/Event.json"
    },
    "status": {
      "$ref": "#/definitions/RSVPStatus"
    },
    "createdAt": {
      "$ref": "#/definitions/ISOString"
    }
  },
  "required": ["id", "userId", "eventId", "status", "createdAt"]
}
