{
  "$id": "https://github.com/meetnearme/api/architecture/Event.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "_id": {
      "$ref": "https://github.com/meetnearme/api/architecture/Shared.json#definitions/UUID"
    },
    "eventSourceId": {
      "$ref": "https://github.com/meetnearme/api/architecture/Shared.json#definitions/UUID"
    },
    "eventSourceType": {
      "$ref": "https://github.com/meetnearme/api/architecture/Shared.json#definitions/EventSourceType"
    },
    "eventOwners": {
      "type": "array",
      "items": {
        "$ref": "https://github.com/meetnearme/api/architecture/Shared.json#definitions/UUID"
      },
      "minItems": 1
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "startTime": {
      "$ref": "https://github.com/meetnearme/api/architecture/Shared.json#definitions/ISOString"
    },
    "endTime": {
      "$ref": "https://github.com/meetnearme/api/architecture/Shared.json#definitions/ISOString"
    },
    "recurrenceRule": {
      "type": "string"
    },
    "hasRegistrationFields": {
      "type": "boolean"
    },
    "hasPurchasable": {
      "type": "boolean"
    },
    "url": {
      "$ref": "https://github.com/meetnearme/api/architecture/Shared.json#definitions/Url"
    },
    "imageUrl": {
      "$ref": "https://github.com/meetnearme/api/architecture/Shared.json#definitions/Url"
    },
    "locationLatitude": {
      "type": ["number", "null"]
    },
    "locationLongitude": {
      "type": ["number", "null"]
    },
    "locationAddress": {
      "type": ["string", "null"]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "categories": {
      "type": "array",
      "items": {
        "$ref": "https://github.com/meetnearme/api/architecture/Category.json"
      },
      "default": []
    },
    "externalEventUrl": {
      "$ref": "https://github.com/meetnearme/api/architecture/Shared.json#definitions/Url"
    },
    "createdAt": {
      "$ref": "https://github.com/meetnearme/api/architecture/Shared.json#definitions/ISOString"
    },
    "updatedAt": {
      "$ref": "https://github.com/meetnearme/api/architecture/Shared.json#definitions/ISOString"
    },
    "updatedBy": {
      "$ref": "https://github.com/meetnearme/api/architecture/User.json"
    }
  },
  "required": [
    "id",
    "eventSourceId",
    "eventSourceType",
    "eventOwners",
    "name",
    "startTime",
    "url",
    "locationLatitude",
    "locationLongitude",
    "locationAddress",
    "createdAt",
    "updatedAt",
    "updatedBy"
  ]
}
